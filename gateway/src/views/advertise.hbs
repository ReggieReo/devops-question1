<!-- views/advertise.hbs -->
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>FlixTube: Advertisements</title>
        <link rel="stylesheet" href="css/tailwind.min.css">
        <link rel="stylesheet" href="css/app.css">
    </head>
    <body>
        <div class="flex flex-col">
            <div class="border-b-2 bg-gray-100">
                <div class="nav flex flex-row items-center mt-1 p-2">
                    <div class="text-xl font-bold">
                        FlixTube
                    </div>
                    <div class="ml-16">
                        <a href="/">Videos</a>
                    </div>
                    <div class="ml-4">
                        <a href="/upload">Upload</a>
                    </div>
                    <div class="ml-4">
                        <a href="/history">History</a>
                    </div>
                    <div class="ml-4 border-b-2 border-blue-600">
                        <a href="/advertise">Advertisements</a>
                    </div>
                </div>
            </div>

            <div class="m-4">
                <h1>Our Partners</h1>
                <div id="ad-list" class="m-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                    {{#if ads}}
                        {{#each ads}}
                            <div class="border rounded p-4 text-center">
                                <a href="{{this.websiteUrl}}" target="_blank" class="block">
                                    <img src="{{this.imageData}}" alt="{{this.name}}" class="mx-auto mb-2 h-40 object-contain">
                                    <div class="text-lg font-bold">{{this.name}}</div>
                                    <div class="text-blue-500 hover:underline">Visit Website</div>
                                </a>
                            </div>
                        {{/each}}                    {{else}}
                        No advertisements available.
                    {{/if}}
                </div>
            </div>
        </div>
    </body>
</html>

